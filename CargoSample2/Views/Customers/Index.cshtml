@{
}
@model IEnumerable<CustomerViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="row">



    <div class="col-md-5">
        <div class="col text-end">
            <a asp-controller="Customers" asp-action="Create" class="btn btn-warning">Register New Customer</a>

        </div>
        <form asp-controller="Customers" asp-action="index" method="get">
            <div class="input-group md-form form-control-sm form-2 p1-0">
                <input type="text" class="form-control my-0 py-1 red-border" placeholder="search" value="" aria-label="Search" name="genrename" />
                <div class="input-group-append">
                    <input type="submit" id="btnSubmit1" value="Search" />


                </div>


            </div>
        </form>





        <table class="table table-hover">
            <thead>
                <tr>
                    <th>User Name</th>

                    <th>Email</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UserName</td>

                        <td>@item.UserName</td>
                        <td>
                            <a asp-controller="Customers" asp-action="Details" asp-route-id="@item.CustId">Details</a>
                            <a asp-controller="Customers" asp-action="Edit" asp-route-id="@item.CustId">Edit</a>
                            <a asp-controller="Customers" asp-action="Delete" asp-route-id="@item.CustId">Delete</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>